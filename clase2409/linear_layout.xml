<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#03a1fc"
    android:padding="16dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="#000000"
        android:layout_marginBottom="16dp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="Elemento 1" />



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edit_text_background"
        android:hint="Ingresar texto" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="#b8ff1f"
        android:orientation="vertical">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            android:hint="Ingresar correo"
            android:inputType="textEmailAddress"
            android:padding="12dp" />

        <CheckBox
            android:id="@+id/cbTyC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Aceptar tÃ©rminos y condiciones" />

        <RadioGroup
            android:id="@+id/rgOpciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

                <RadioButton
                    android:id="@+id/rbOpcion1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Opcion 1" />

            <RadioButton
                android:id="@+id/rbOpcion2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opcion 2" />


            <RadioButton
                android:id="@+id/rbOpcion3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opcion 3" />




        </RadioGroup>


    </LinearLayout>

    <Button
        android:id="@+id/btEnviar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#03fcb5"
        android:elevation="8dp"
        android:textSize="16dp"
        android:layout_marginBottom="16dp"
        android:textColor="#000000"
        android:padding="12dp"
        android:layout_gravity="center"
        android:text="Boton 1" />
</LinearLayout>
